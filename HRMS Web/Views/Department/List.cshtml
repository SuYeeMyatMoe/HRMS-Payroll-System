@model IList<DepartmentViewModel>
<!DOCTYPE html>
<html>
<head>
    <title>Position List</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <h1>Position List Information</h1>
    @if (TempData["Msg"] != null && !Convert.ToBoolean(TempData["IsErrorOccur"]))
    {
        <div class="alert alert-success" role="alert">
            <span>@TempData["Msg"]</span>
        </div>
    }
    else if (TempData["Msg"] != null)//Else only will appear this message box (so use else if)
    {
        <div class="alert alert-danger" role="alert">
            <span>@TempData["Msg"]</span>
        </div>
    }
    <table class="table" id="PositionTable">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Extension Phone</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <!--To be a dynamic list, iterate the model as array-->
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@(Model.IndexOf(item) + 1)</th><!--serial number with increment for the index of array(Model)-->
                    <td>@item.Code</td>
                    <td>@item.Description</td>
                    <td>@item.ExtensionPhone</td>
                    <td>
                        <a href="/department/edit?id=@item.Id" class="btn btn-success" role="button">Edit</a>
                        <a href="/department/delete?id=@item.Id" class="btn bg-danger" role="button" onclick="return confirm('Are you sure to delete this record?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        //Applying data table in this list
        $(document).ready(function () {
            $('#PositionTable').DataTable();
        });
    </script>
</body>
</html>
