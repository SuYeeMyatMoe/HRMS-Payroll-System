<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS_Web</title>
    <!--Using bootstrap in local file server-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRMS_Web.styles.css" asp-append-version="true" />

    <!--Data table from cnd-->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-lg">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">HRMS Web</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>

                            <!-- Position Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    Position
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" href="/position/entry">Entry</a></li>
                                    <li><a class="dropdown-item" href="/position/list">List</a></li>
                                </ul>
                            </li>

                            <!-- Department Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    Department
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" href="/Department/entry">Entry</a></li>
                                    <li><a class="dropdown-item" href="/Department/list">List</a></li>
                                </ul>
                            </li>

                            <!-- Employee Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    Employee
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" href="/Employee/entry">Entry</a></li>
                                    <li><a class="dropdown-item" href="/Employee/list">List</a></li>
                                </ul>
                            </li>

                            <!-- Daily Attendance Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    Daily Attendance
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" href="/DailyAttendance/entry">Entry</a></li>
                                    <li><a class="dropdown-item" href="/DailyAttendance/list">List</a></li>
                                </ul>
                            </li>
                        </ul>

                        <!-- Search Bar -->
                        <form class="d-flex" role="search" method="GET" action="/Search">
                            <input class="form-control me-2 bg-dark text-white border-0" type="search" placeholder="Search..." aria-label="Search" name="query">
                            <button class="btn btn-outline-light" type="submit">
                                search
                            </button>
                        </form>
                    </div>
                </div>
            </nav>


        </header>

        <div class="container main-content" style="padding:20px">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - HRMS_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    
    <!--Data table from cnd-->
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
