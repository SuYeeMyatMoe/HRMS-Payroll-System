@model PositionViewModel
<!DOCTYPE html>
    <html>
    <head>
        <title>Position Edit</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    </head>
    <body>
    <h3>Position Edit Form</h3>
    <form action="/position/update" method="post">
        <div class="mb-3">
            <!--for update process-->
            <input type="hidden" name="Id" value="@Model.Id">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" name="Name" id="txtName" placeholder="type position name in here" required value="@Model.Name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" class="form-control" name="Description" id="txtDescription" placeholder="type position description in here" required value="@Model.Description">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Level</label>
            <input type="number" class="form-control" name="Level" id="txtLevel" placeholder="type level in here" value="@Model.Level">
        </div>
        <button type="submit" class="btn btn-success" id="btnUpdate" disabled>Update</button>
        <button type="reset" class="btn btn-primary">Cancel</button>
    </form>
    <script>
        $(document).ready(function () {
            //initially disable the update button
             $('#btnUpdate').attr('disabled', true);
            //function defination
            function toggleEntryButton() {
                if ($('#txtName').val().length != 0 && $('#txtDescription').val().length != 0) {
                    $('#btnUpdate').attr('disabled', false);
                } else {
                    $('#btnUpdate').attr('disabled', true);
                }
            }
            $('#txtName,#txtDescription').keyup(function () {
                toggleEntryButton();
            });
        });
    </script>
    </body>
    </html>
