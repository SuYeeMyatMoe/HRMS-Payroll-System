@model IList<EmployeeViewModel>
<!DOCTYPE html>
<html>
<head>
    <title>Employee List</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <h1>Employee List Information</h1>
    @if (TempData["Msg"] != null && !Convert.ToBoolean(TempData["IsErrorOccur"]))
    {
        <div class="alert alert-success" role="alert">
            <span>@TempData["Msg"]</span>
        </div>
    }
    else if (TempData["Msg"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <span>@TempData["Msg"]</span>
        </div>
    }
    <table class="table" id="EmployeeTable">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Gender</th>
                <th scope="col">Basic Salary</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tr>
            @foreach(var employee in Model)
            {
                <th scope="row">@(Model.IndexOf(employee) + 1)</th>
                <td>@employee.Code</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@(employee.Gender == 'm' ? "Male" : employee.Gender == 'f' ? "Female" : "Other")</td>
                <td>@employee.BasicSalary</td>
                <td>@employee.DOB</td>
                <td>
                    <a href="/employee/edit?id=@employee.Id" class="btn btn-success" role="button">Edit</a>
                    <a href="/employee/delete?id=@employee.Id" class="btn bg-danger" role="button" onclick="return confirm('Are you sure to delete this record?')">Delete</a>
                </td>
            }

        </tr>
    </table>
    <script>
        $(document).ready(function () {
            $('#EmployeeTable').DataTable();
        });
    </script>
</body>
</html>
