@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100 py-5">
    <div class="row justify-content-center w-100">
        <div class="col-lg-8 col-xl-6 bg-white rounded shadow-sm p-4 p-md-5">
            <section>
                <h1 class="h3 mb-4 text-center">Welcome back</h1>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username"
                               aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label text-muted">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                               aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label text-muted">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small">Forgot password?</a>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill py-2 mb-3">
                        Log in
                    </button>

                    <div class="text-center pt-3">
                        <p class="text-muted small">
                            Don't have an account?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Sign up</a>
                        </p>
                        <p class="small">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        border-color: #86b7fe;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-1px);
        }

    .min-vh-100 {
        min-height: 100vh;
    }
</style>